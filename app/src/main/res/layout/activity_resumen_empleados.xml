<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F9"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumen de Empleados"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="24dp" />

        <!-- Tarjeta Tiempo Completo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DBEAFE"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:elevation="4dp"
            android:backgroundTint="#DBEAFE"
            android:clipToPadding="false"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:tint="#1D4ED8"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/tvTiempoCompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiempo Completo: 0 empleados"
                android:textSize="18sp"
                android:textColor="#1E3A8A" />
        </LinearLayout>

        <!-- Tarjeta Medio Tiempo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DCFCE7"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:tint="#15803D"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/tvMedioTiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medio Tiempo: 0 empleados"
                android:textSize="18sp"
                android:textColor="#065F46" />
        </LinearLayout>

        <!-- Tarjeta Contratistas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FEF3C7"
            android:orientation="horizontal"
            android:padding="16dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_manage"
                android:tint="#B45309"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/tvContratistas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contratistas: 0 empleados"
                android:textSize="18sp"
                android:textColor="#92400E" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>