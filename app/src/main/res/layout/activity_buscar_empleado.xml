<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F1F5F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar Empleado"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/edtBuscarDepartamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar por Departamento"
            android:backgroundTint="#3B82F6"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtBuscarExperiencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Años de Experiencia mínima"
            android:backgroundTint="#3B82F6"
            android:inputType="number"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnBuscarEmpleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:textAllCaps="false"
            android:backgroundTint="#10B981"
            android:textColor="#FFF" />

        <ListView
            android:id="@+id/listaResultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>